 <div class="col-sm-6 ProductLine2">
                <h3>{{@productName}}</h3>
                  <div class="text-warning">
      <i class="fa fa-star"></i>
      <i class="fa fa-star"></i>
      <i class="fa fa-star"></i>
      <i class="fa fa-star"></i>
      <i class="fa fa-star-half-o"></i>
    </div>
    
    <div class={{unless @isDetails 'h4'}}>
    <del class="small text-black-50">{{ currency @productInfo.original 'en-IN'}}</del>
    <i class="text-danger font-weight-bold">{{ currency @productInfo.current 'en-IN'}}</i>
  </div>

 {{#if @isDetails}}
   

  <div class="d-flex justify-content-between align-items-end">
     <h5 class="text-dark">Color</h5> 
    <div>
    {{#each @colorss as |colorref|}}
      <span class="{{concat "bg-"colorref.color}} round active-{{@color}}" {{on "click" (fn @onChangeColor colorref.color)}} ></span>
      
    {{/each}}

</div>
    <button class="btn btn-info btn-sm" type="button"  {{on "click" this.addCart}} >
       <i class="fa fa-shopping-cart"></i>
      Add to cart</button>
  </div>
 {{/if}}

            </div>